{
  "name": "retroverse",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:auto": "tsx tools/autoUpdate.ts && npm run dev",
    "sync:index": "bash scripts/sync-index.sh",
    "build": "npm run sync:index && tsc -b tsconfig.app.json tsconfig.node.json && vite build",
    "test:tier-mapping": "tsx --test tools/tierMapping.test.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "pipeline:build": "tsc -p tsconfig.pipeline.json",
    "pipeline:run": "tsx pipeline/scripts/run.ts",
    "history:extract": "tsx pipeline/scripts/run.ts history-extract",
    "pipeline:serve": "tsx pipeline/server.ts",
    "pipeline": "tsc -p tsconfig.pipeline.json && node dist-pipeline/pipeline/index.js",
    "api": "tsx api/server.ts",
    "api:selftest": "node tools/api-selftest.mjs",
    "analyze:playcounts": "python3 tools/analyze_playcounts.py > artifacts/output/playcount_report.txt"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.744.0",
    "@types/express": "^5.0.6",
    "better-sqlite3": "^12.6.2",
    "express": "^5.2.1",
    "fast-xml-parser": "^4.5.1",
    "fuse.js": "^7.0.0",
    "jotai": "^2.17.1",
    "music-metadata": "^8.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
